@model NorthwindCorp.Models.CreateProductModel

<div class="form-group">
  <label asp-for="Product.Name"></label>
  <input asp-for="Product.Name" class="form-control" placeholder="Name of the product" />
  <span asp-validation-for="Product.Name"></span>
</div>

<div class="form-group">
  <label asp-for="Product.CategoryId"></label>
  <Select asp-for="Product.CategoryId"
          asp-items="@Model.Categories"
          class="form-control">
    <option>Please select one</option>
  </Select>
  <span asp-validation-for="Product.CategoryId"></span>
</div>

<div class="form-group">
  <label asp-for="Product.SupplierId"></label>
  <Select asp-for="Product.SupplierId"
          asp-items="@Model.Suppliers"
          class="form-control">
    <option>Please select one</option>
  </Select>
  <span asp-validation-for="Product.SupplierId"></span>
</div>

<div class="form-group">
  <label asp-for="Product.QuantityPerUnit"></label>
  <input asp-for="Product.QuantityPerUnit" class="form-control" placeholder="QuantityPerUnit" />
  <span asp-validation-for="Product.QuantityPerUnit"></span>
</div>

<div class="form-group">
  <label asp-for="Product.UnitPrice"></label>
  <input asp-for="Product.UnitPrice" class="form-control" placeholder="0" />
  <span asp-validation-for="Product.UnitPrice"></span>
</div>

<div class="form-group">
  <label asp-for="Product.UnitsInStock"></label>
  <input asp-for="Product.UnitsInStock" class="form-control" placeholder="0" />
  <span asp-validation-for="Product.UnitsInStock"></span>
</div>

<div class="form-group">
  <label asp-for="Product.UnitsOnOrder"></label>
  <input asp-for="Product.UnitsOnOrder" class="form-control" placeholder="0" />
  <span asp-validation-for="Product.UnitsOnOrder"></span>
</div>

<div class="form-group">
  <label asp-for="Product.ReorderLevel"></label>
  <input asp-for="Product.ReorderLevel" class="form-control" placeholder="ReorderLevel" />
  <span asp-validation-for="Product.ReorderLevel"></span>
</div>

<div class="form-check">
  <input asp-for="Product.Discontinued" class="form-check-input" type="checkbox" value="" />
  <label asp-for="Product.Discontinued"></label>
</div>
