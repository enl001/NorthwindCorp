@model NorthwindCorp.Core.Repository.Models.Product

<div class="form-group">
  <label asp-for="ProductName"></label>
  <input asp-for="ProductName" class="form-control" placeholder="Name of the product" />
  <span asp-validation-for="ProductName"></span>
</div>

<div class="form-group">
  <label asp-for="CategoryId"></label>
  <Select asp-for="CategoryId"
          asp-items="@Model.Categories"
          class="form-control">
    <option>Please select one</option>
  </Select>
  <span asp-validation-for="CategoryId"></span>
</div>

<div class="form-group">
  <label asp-for="SupplierId"></label>
  <Select asp-for="SupplierId"
          asp-items="@Model.Suppliers"
          class="form-control">
    <option>Please select one</option>
  </Select>
  <span asp-validation-for="SupplierId"></span>
</div>

<div class="form-group">
  <label asp-for="QuantityPerUnit"></label>
  <input asp-for="QuantityPerUnit" class="form-control" placeholder="QuantityPerUnit" />
  <span asp-validation-for="QuantityPerUnit"></span>
</div>

<div class="form-group">
  <label asp-for="UnitPrice"></label>
  <input asp-for="UnitPrice" class="form-control" placeholder="0" />
  <span asp-validation-for="UnitPrice"></span>
</div>

<div class="form-group">
  <label asp-for="UnitsInStock"></label>
  <input asp-for="UnitsInStock" class="form-control" placeholder="0" />
  <span asp-validation-for="UnitsInStock"></span>
</div>

<div class="form-group">
  <label asp-for="UnitsOnOrder"></label>
  <input asp-for="UnitsOnOrder" class="form-control" placeholder="0" />
  <span asp-validation-for="UnitsOnOrder"></span>
</div>

<div class="form-group">
  <label asp-for="ReorderLevel"></label>
  <input asp-for="ReorderLevel" class="form-control" placeholder="ReorderLevel" />
  <span asp-validation-for="ReorderLevel"></span>
</div>

<div class="form-check">
  <input asp-for="Discontinued" class="form-check-input" type="checkbox" />
  <label asp-for="Discontinued"></label>
</div>
